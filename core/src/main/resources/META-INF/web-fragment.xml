<?xml version="1.0" encoding="UTF-8"?>
<web-fragment version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">

	<name>core</name>

	<listener>
		<listener-class>org.geoladris.servlet.AppContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>lang-filter</filter-name>
		<filter-class>org.geoladris.servlet.LangFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>lang-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- index call -->
	<servlet>
		<servlet-name>index-servlet</servlet-name>
		<servlet-class>org.geoladris.servlet.IndexHTMLServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>index-servlet</servlet-name>
		<url-pattern>/index.html</url-pattern>
	</servlet-mapping>

	<!-- main requirejs module -->
	<servlet>
		<servlet-name>mainjs-servlet</servlet-name>
		<servlet-class>org.geoladris.servlet.MainJSServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>mainjs-servlet</servlet-name>
		<url-pattern>/modules/main.js</url-pattern>
	</servlet-mapping>

	<!-- static folder content -->
	<servlet>
		<servlet-name>static-content-servlet</servlet-name>
		<servlet-class>org.geoladris.servlet.ClientContentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>static-content-servlet</servlet-name>
		<url-pattern>/static/*</url-pattern>
		<url-pattern>/modules/*</url-pattern>
		<url-pattern>/jslib/*</url-pattern>
		<url-pattern>/styles/*</url-pattern>
		<url-pattern>/theme/*</url-pattern>
	</servlet-mapping>

	<!-- config call -->
	<servlet>
		<servlet-name>config-servlet</servlet-name>
		<servlet-class>org.geoladris.servlet.ConfigServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>config-servlet</servlet-name>
		<url-pattern>/config.js</url-pattern>
	</servlet-mapping>

	<!-- Error management -->
	<filter>
		<filter-name>error-filter</filter-name>
		<filter-class>org.geoladris.servlet.ErrorFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>error-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-fragment>